<div class="container">   
    <div class="col">
        <div class="row">
            <% for(var i=0; i < Product.length ; i++){ %>
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card">
                        <img class="card-img-top" src="https://dummyimage.com/600x400/55595c/fff" alt="Card image cap">
                        <div class="card-body">
                            <h4 class="card-title"><a href="" title="View Product"><%=Product[i].name%></a></h4>
                            <p class="card-text"><%=Product[i].description%></p>

                            <p id="product_id"><%=Product[i]._id%></p>
                            <div class="row">
                                <div class="col">
                                    <p class="btn btn-danger btn-block"><%=Product[i].price%> &#8377;</p>
                                </div>
                                <div class="col">
                                    <button type="submit" onclick=" AddToCart();" class="btn btn-success btn-block">Add to cart</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <%}%>
        </div>
